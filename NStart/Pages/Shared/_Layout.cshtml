@inject IViewLocalizer Localizer

@{
    var cultureFeature = Context.Features.Get<IRequestCultureFeature>();
}

<!DOCTYPE html>
<html lang="@cultureFeature.RequestCulture.Culture" class="has-spaced-navbar-fixed-top">
<head>
    @* OG:Metadata Types*@
    <meta property="og:site_name" content="NStart"/>
    <meta property="og:title" content="@(ViewData["Title"] ?? "Unknown Page")"/>
    <meta property="og:url" content="@(ViewData["PageUrl"] ?? "https://nstart.net")" />
    <meta property="og:type" content="@(ViewData["OpenGraph:ContentType"] ?? "website")" />
    <meta property="og:locale" content="@cultureFeature.RequestCulture.Culture" />
    <meta property="og:image" content="@(ViewData["MetadataImage"] ?? "https://nstart.net/static/defaults/default-twitter-image.png")" />
    <meta property="og:image:secure_url" content="@(ViewData["MetadataImage"] ?? "https://nstart.net/static/defaults/default-twitter-image.png"))" />
    @* Twitter Cards *@
    <meta name="twitter:card" content="@(ViewData["Twitter:CardType"] ?? "summary") " />
    <meta name="twitter:title" content="@(ViewData["Twitter:Title"] ?? "NStart")" />
    <meta name="twitter:description" content="@(ViewData["Twitter:Description"] ?? "A default Videogame Studio landing page created with NStart")" />
    <meta name="twitter:url" content="@(ViewData["PageUrl"] ?? "https://nstart.net")" />
    <meta name="twitter:image" content="@(ViewData["MetadataImage"] ?? "https://nstart.net/static/defaults/default-twitter-image.png")" />
    <meta name="twitter:image:alt" content="@(ViewData["Twitter:ImageAlt"] ?? "Default NStart page Twitter image")" />
    <meta name="twitter:site" content="@@dummy-account" />
    <meta name="twitter:creator" content="@(ViewData["Twitter:CreatorAccount"] ?? "@dummy-account")" />
    @* Language, Charset and Format Information*@
    <meta charset="utf-8" />
    <meta lang="@cultureFeature.RequestCulture.Culture" />
    <meta http-equiv="content-language" content="@cultureFeature.RequestCulture.Culture">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    @* Basic Standardized Metadata*@
    <meta name="robots" content="index, follow" />
    <meta name="application-name" content="NStart" />
    <meta name="author" content="Leonardo Antonio González Castro" />
    <meta name="description" content="Default launch page for a video game Studio using NStart" />
    <meta name="theme-color" content="#122562" />
    <meta name="description" content="NStart base template" />
    <meta name="author" content="Leonardo Antonio González Castro" />
    <link rel="canonical" href="https://nstart.com" />
    <link rel="shortcut icon" href="~/assets/icons/favicon.ico" type="image/x-icon" sizes="32x32" />
    <link rel="shortcut icon" href="~/assets/icons/favicon-64px.ico" type="image/x-icon" sizes="64x64" />
    <link rel="fluid-icon" href="~/App_Data/Assets/Icons/fluid_icon.png" title="NStart" />
    @* Start of actual site content *@
    <title>NStart | @ViewData["Title"]</title>
    @* Environment based CSS & JS includes *@
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/animatecss/dist/animate.css" />
        <link rel="stylesheet" href="~/lib/bulma/dist/css/bulma.css" />
        <link rel="stylesheet" href="~/css/line-awesome/line-awesome.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.0/css/bulma.min.css"
              asp-fallback-href="~/lib/bulma/dist/css/bulma.css"
              asp-fallback-test-class="is-primary"
              crossorigin="anonymous"
              integrity="sha256-8BrtNNtStED9syS9F+xXeP815KGv6ELiCfJFQmGi1Bg=" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.0/animate.min.css"
              asp-fallback-href="~/lib/animatecss/dist/animate.css"
              asp-fallback-test-class="animate__bounce"
              crossorigin="anonymous"
              integrity="sha256-6hqHMqXTVEds1R8HgKisLm3l/doneQs+rS1a5NLmwwo=" />
        <link rel="stylesheet" href="~/lib/easymde/dist/css/easymde.min.css" />
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
              asp-fallback-href="~/css/line-awesome/line-awesome.min.css"
              asp-fallback-test-class="la" />
    </environment>
    @* Always inclued CSS & JS dependences *@
    <link rel="stylesheet" href="~/css/site.css" async />
    <link rel="stylesheet" href="~/css/fonts.css" async />
</head>
<body>
    @* Navbar container*@
    <nav class="navbar is-spaced is-dark is-transparent is-fixed-top" role="navigation" aria-label="Main Navigation">
        <div class="navbar-brand">
            <a class="navbar-item" asp-area="" asp-page="/Home/HomePage">
                <img src="~/assets/icons/logo-original.svg" alt="NStart's logotype" title="NStart" width="32" height="32" />
            </a>
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="mainNavbarElements">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div class="navbar-menu" id="mainNavbarElements">
            <div class="navbar-start">
                @* Our Studio Dropdown *@
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">Our Studio</a>
                    <div class="navbar-dropdown is-right">
                        <a class="navbar-item" asp-area="" asp-page="/Company/ProjectsPage">@Localizer["ProjectsNavbar"]</a>
                        <a class="navbar-item" asp-area="" asp-page="/Company/TeamPage">@Localizer["TeamNavbar"]</a>
                        <div class="navbar-divider"></div>
                        <a class="navbar-item" asp-area="" asp-page="/Company/AwardsPage">@Localizer["AwardsNavbar"]</a>
                    </div>
                </div>
                @* Contact Page *@
                <a class="navbar-item" asp-area="" asp-page="/Home/ContactPage">@Localizer["ContactNavbar"]</a>
                @* Media Page *@
                <a class="navbar-item" asp-area="" asp-page="/Home/MediaPage">@Localizer["MediaNavbar"]</a>
            </div>
        </div>
    </nav>
    @* Main container of the application's view *@
    <main role="main">
        @RenderBody()
    </main>
    @* Partial RazorPage view that holds our global Footer *@
    <partial name="_FooterPartial" />
    @* Environment based JavaScript includes*@
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js" defer></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=">
        </script>
    </environment>
</body>
</html>